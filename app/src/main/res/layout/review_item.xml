<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_img"
        android:src="@drawable/personex"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="5sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_name"
        app:layout_constraintLeft_toRightOf="@+id/review_img"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:textSize="12sp"
        tools:text="닉네임"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_date"
        app:layout_constraintLeft_toRightOf="@+id/review_img"
        android:layout_marginLeft="10sp"
        android:textSize="10sp"
        tools:text="날짜"
        app:layout_constraintTop_toBottomOf="@id/review_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_content"
        app:layout_constraintLeft_toRightOf="@+id/review_img"
        android:layout_marginLeft="10sp"
        android:textSize="15sp"
        android:maxLines="4"
        tools:text="내용"
        app:layout_constraintTop_toBottomOf="@id/review_date"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_24"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10sp"
        android:id="@+id/review_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>